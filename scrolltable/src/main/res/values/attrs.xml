<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MirrorHScrollView">
        <attr name="mirror_horizontal" format="string"/>
    </declare-styleable>
    <declare-styleable name="MirrorScrollView">
        <attr name="mirror_vertical" format="string"/>
    </declare-styleable>
    <declare-styleable name="ScrollTable">
        <attr name="scrolltable_northRowsGap" format="integer"/>
        <attr name="scrolltable_southRowsGap" format="integer"/>
        <attr name="scrolltable_westColumnsGap" format="integer"/>
        <attr name="scrolltable_eastColumnsGap" format="integer"/>
        <attr name="scrolltable_borderColor" format="color"/>
        <attr name="scrolltable_northCellBorder" format="integer"/>
        <attr name="scrolltable_southCellBorder" format="integer"/>
        <attr name="scrolltable_westCellBorder" format="integer"/>
        <attr name="scrolltable_eastCellBorder" format="integer"/>
        <attr name="scrolltable_northRows" format="integer"/>
        <attr name="scrolltable_southRows" format="integer"/>
        <attr name="scrolltable_westColumns" format="integer"/>
        <attr name="scrolltable_eastColumns" format="integer"/>
        <attr name="scrolltable_shrink">
            <flag name="none" value="0" />
            <flag name="north" value="1" />
            <flag name="east" value="2" />
            <flag name="south" value="4" />
            <flag name="west" value="8" />
            <flag name="all" value="15" />
        </attr>
    </declare-styleable>
</resources>